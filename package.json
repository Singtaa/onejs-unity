{
  "name": "onejs-unity",
  "version": "0.2.0",
  "description": "Unity integration utilities for OneJS - esbuild/PostCSS plugins for USS, GPU compute, and more",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./assets": "./src/assets/index.ts",
    "./gpu": "./src/gpu/index.ts",
    "./input": "./src/input/index.ts",
    "./interop": "./src/interop/index.ts",
    "./proc": "./src/proc/index.ts",
    "./proc/noise": "./src/proc/noise/index.ts",
    "./esbuild": "./src/esbuild/index.mjs",
    "./postcss": "./src/postcss/index.mjs"
  },
  "files": [
    "src"
  ],
  "keywords": [
    "unity",
    "onejs",
    "esbuild",
    "postcss",
    "tailwindcss",
    "uss",
    "css-modules",
    "gpu",
    "compute-shader",
    "input-system",
    "procedural-generation",
    "noise",
    "perlin",
    "simplex",
    "game-development"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Singtaa/onejs-unity"
  },
  "author": "Singtaa",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "esbuild": ">=0.17.0",
    "postcss": ">=8.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "esbuild": {
      "optional": true
    },
    "postcss": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "license": "MIT"
}
